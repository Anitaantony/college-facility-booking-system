<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - EduNexus</title>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/dstyle.css" />
  
  <style>
    /* College Background Image */
    body {
      background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), 
                  url('/images/clg.jpg') center/cover no-repeat fixed;
      min-height: 100vh;
    }

    .dashboard-container {
      max-width: 1200px;
      margin: 20px auto;
      padding: 20px;
      position: relative;
      z-index: 1;
    }
    
    /* Enhanced Welcome Section with Glass Effect */
    .welcome-section {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: #2c3e50;
      padding: 40px;
      border-radius: 20px;
      margin-bottom: 40px;
      text-align: center;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    }
    
    .welcome-section h1 {
      margin: 0;
      font-size: 2.8rem;
      font-weight: 800;
      background: linear-gradient(135deg, #667eea, #1506e2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .welcome-section p {
      margin: 15px 0 0 0;
      font-size: 1.4rem;
      color: #5a67d8;
      font-weight: 600;
    }

    /* Enhanced Stats Grid */
    .stats-grid {
      display: grid !important;
      grid-template-columns: repeat(4, 1fr) !important;
      gap: 25px !important;
      margin-bottom: 40px !important;
      width: 100% !important;
    }

    .stat-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
      text-align: center;
      border-left: 4px solid;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, transparent, rgba(255, 255, 255, 0.1));
      pointer-events: none;
    }

    .stat-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.18);
    }

    .stat-card.bookings { border-left-color: #667eea; }
    .stat-card.pending { border-left-color: #f093fb; }
    .stat-card.approved { border-left-color: #4facfe; }
    .stat-card.facilities { border-left-color: #43e97b; }
    
    .stat-number {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 12px;
      position: relative;
      z-index: 2;
    }

    .bookings .stat-number { color: #667eea; }
    .pending .stat-number { color: #f093fb; }
    .approved .stat-number { color: #4facfe; }
    .facilities .stat-number { color: #43e97b; }
    
    .stat-label {
      color: #4a5568;
      font-size: 1.1rem;
      font-weight: 700;
      margin-bottom: 8px;
      position: relative;
      z-index: 2;
    }
    
    .stat-icon {
      font-size: 3.5rem;
      margin-bottom: 18px;
      opacity: 0.9;
      position: relative;
      z-index: 2;
    }
    
    .bookings .stat-icon { color: #667eea; }
    .pending .stat-icon { color: #f093fb; }
    .approved .stat-icon { color: #4facfe; }
    .facilities .stat-icon { color: #43e97b; }
    
    /* Enhanced Quick Actions */
    .quick-actions {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 25px;
      margin-bottom: 40px;
    }
    
    .action-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .action-card:hover {
      transform: translateY(-5px);
    }
    
    .action-card h3 {
      margin: 0 0 15px 0;
      color: #2d3748;
      font-size: 1.5rem;
      font-weight: 800;
    }

    .action-card p {
      color: #4a5568;
      font-size: 1rem;
      line-height: 1.6;
      margin-bottom: 20px;
    }
    
    .action-buttons {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }
    
    .btn {
      padding: 14px 24px;
      border: none;
      border-radius: 10px;
      text-decoration: none;
      font-weight: 700;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      transition: all 0.3s ease;
      cursor: pointer;
      font-size: 0.95rem;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }
    
    .btn-primary:hover {
      background: linear-gradient(135deg, #764ba2, #667eea);
      color: white;
      text-decoration: none;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }
    
    .btn-outline {
      background: rgba(255, 255, 255, 0.9);
      color: #667eea;
      border: 2px solid rgba(102, 126, 234, 0.3);
      backdrop-filter: blur(10px);
    }
    
    .btn-outline:hover {
      background: rgba(102, 126, 234, 0.1);
      color: #5a67d8;
      text-decoration: none;
      transform: translateY(-2px);
      border-color: #667eea;
    }
    
    /* Enhanced Recent Activity */
    .recent-activity {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }
    
    .recent-activity h3 {
      margin: 0 0 25px 0;
      color: #2d3748;
      font-size: 1.4rem;
      font-weight: 800;
    }
    
    .activity-item {
      display: flex;
      align-items: center;
      padding: 15px 0;
      border-bottom: 1px solid rgba(226, 232, 240, 0.5);
      transition: background 0.2s ease;
    }

    .activity-item:hover {
      background: rgba(102, 126, 234, 0.05);
      border-radius: 8px;
      margin: 0 -10px;
      padding: 15px 10px;
    }
    
    .activity-item:last-child {
      border-bottom: none;
    }
    
    .activity-icon {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 20px;
      font-size: 1.4rem;
      position: relative;
      z-index: 2;
    }
    
    .activity-icon.booking {
      background: linear-gradient(135deg, #667eea, #1506e2);
      color: white;
    }
    
    .activity-text {
      flex: 1;
    }
    
    .activity-title {
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 5px;
      font-size: 1.05rem;
    }
    
    .activity-time {
      color: #718096;
      font-size: 0.95rem;
    }

    /* Loading Animation */
    .dashboard-container {
      animation: fadeInUp 0.6s ease-out;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .stats-grid {
        grid-template-columns: repeat(2, 1fr) !important;
        gap: 15px !important;
      }
      
      .quick-actions {
        grid-template-columns: 1fr;
      }
      
      .action-buttons {
        flex-direction: column;
      }

      .welcome-section h1 {
        font-size: 2.2rem;
      }

      .welcome-section p {
        font-size: 1.1rem;
      }

      .dashboard-container {
        padding: 15px;
        margin: 15px;
      }
    }

    @media (max-width: 480px) {
      .stats-grid {
        grid-template-columns: 1fr !important;
      }

      .dashboard-container {
        padding: 10px;
        margin: 10px;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/userHeader') %>

  <main class="main-content" style="margin-top: 20px;">
    <div class="dashboard-container">
      
      <!-- Welcome Section -->
      <div class="welcome-section">
        <h1>Welcome back, <%= user.name %>! ðŸŽ“</h1>
        <p>Manage your facility bookings and explore campus resources</p>
      </div>

      <!-- Statistics Cards -->
      <div class="stats-grid">
        <div class="stat-card bookings">
          <div class="stat-icon">
            <i class="fas fa-calendar-check"></i>
          </div>
          <div class="stat-number"><%= totalBookings || 0 %></div>
          <div class="stat-label">Total Bookings</div>
        </div>
        
        <div class="stat-card pending">
          <div class="stat-icon">
            <i class="fas fa-clock"></i>
          </div>
          <div class="stat-number"><%= pendingBookings || 0 %></div>
          <div class="stat-label">Pending Approval</div>
        </div>
        
        <div class="stat-card approved">
          <div class="stat-icon">
            <i class="fas fa-check-circle"></i>
          </div>
          <div class="stat-number"><%= approvedBookings || 0 %></div>
          <div class="stat-label">Approved Bookings</div>
        </div>
        
        <div class="stat-card facilities">
          <div class="stat-icon">
            <i class="fas fa-building"></i>
          </div>
          <div class="stat-number"><%= availableFacilities || 0 %></div>
          <div class="stat-label">Available Facilities</div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="quick-actions">
        <div class="action-card">
          <h3><i class="fas fa-rocket"></i> Quick Actions</h3>
          <p>Get started with the most common tasks and explore available facilities</p>
          <div class="action-buttons">
            <a href="/user/facilities" class="btn btn-primary">
              <i class="fas fa-building"></i> Browse Facilities
            </a>
            <a href="/user/bookings" class="btn btn-outline">
              <i class="fas fa-calendar-check"></i> My Bookings
            </a>
          </div>
        </div>
        
        <div class="action-card">
          <h3><i class="fas fa-info-circle"></i> Need Help?</h3>
          <p>Access support resources, manage your profile, and get assistance</p>
          <div class="action-buttons">
            <a href="/user/profile" class="btn btn-outline">
              <i class="fas fa-user-cog"></i> Profile Settings
            </a>
            <a href="/user/reports" class="btn btn-outline">
              <i class="fas fa-chart-line"></i> View Reports
            </a>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="recent-activity">
        <h3><i class="fas fa-history"></i> Recent Activity</h3>
        
        <% if (recentBookings && recentBookings.length > 0) { %>
          <% recentBookings.forEach(function(booking) { %>
            <div class="activity-item">
              <div class="activity-icon booking">
                <i class="fas fa-calendar-plus"></i>
              </div>
              <div class="activity-text">
                <div class="activity-title">
                  Booked <%= booking.facility.facility_name %>
                </div>
                <div class="activity-time">
                  <%= booking.createdAt.toDateString() %> â€¢ Status: <%= booking.status %>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="activity-item">
            <div class="activity-icon booking">
              <i class="fas fa-info-circle"></i>
            </div>
            <div class="activity-text">
              <div class="activity-title">No recent activity</div>
              <div class="activity-time">Start by booking your first facility!</div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <script>
    // Add smooth loading effect and debug image loading
    document.addEventListener('DOMContentLoaded', function() {
      console.log('User Dashboard loaded for:', '<%= user.name %>');
      
      // Test if background image loads
      const testImg = new Image();
      testImg.onload = function() {
        console.log('âœ… College background image (clg.jpg) loaded successfully!');
      };
      testImg.onerror = function() {
        console.log('âŒ College background image (clg.jpg) failed to load. Check image path.');
      };
      testImg.src = '/images/clg.jpg';
      
      // Animate stat numbers
      const statNumbers = document.querySelectorAll('.stat-number');
      statNumbers.forEach(stat => {
        const finalNumber = parseInt(stat.textContent);
        let currentNumber = 0;
        const increment = finalNumber / 20;
        
        const timer = setInterval(() => {
          currentNumber += increment;
          if (currentNumber >= finalNumber) {
            stat.textContent = finalNumber;
            clearInterval(timer);
          } else {
            stat.textContent = Math.floor(currentNumber);
          }
        }, 50);
      });
    });
  </script>
</body>
</html>
