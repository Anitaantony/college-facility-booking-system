<%- include("../partials/userHeader") %>
<link rel="stylesheet" href="/css/dstyle.css" />

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
      <div class="card-header bg-primary text-white text-center py-3">
        <h3 class="mb-0">My Profile</h3>
        <p class="mb-0">Manage your account details</p>
      </div>
  
      <div class="card-body p-4">
        <form>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="user_name" class="form-label fw-bold">Name</label>
              <input type="text" class="form-control" id="user_name" value="<%= user.user_name %>" readonly>
            </div>
  
            <div class="col-md-6">
              <label for="user_email" class="form-label fw-bold">Email</label>
              <input type="email" class="form-control" id="user_email" value="<%= user.user_email %>" readonly>
            </div>
          </div>
  
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="user_contact" class="form-label fw-bold">Contact</label>
              <input type="text" class="form-control" id="user_contact" value="<%= user.user_contact %>" readonly>
            </div>
  
            <div class="col-md-6">
              <label for="dept_id" class="form-label fw-bold">Department ID</label>
              <input type="text" class="form-control" id="dept_id" value="<%= user.dept_id %>" readonly>
            </div>
          </div>
  
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="user_type" class="form-label fw-bold">User Type</label>
              <input type="text" class="form-control" id="user_type" value="<%= user.user_type %>" readonly>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  
        


