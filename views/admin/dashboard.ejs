<%- include('../partials/header') %>

<div class="container mt-5" id="admin-page">
  <div class="page-header">
    <h1>Admin Dashboard</h1>
    <p>Manage facilities and oversee booking operations</p>
  </div>

  <div class="admin-stats d-flex justify-content-between flex-wrap my-4">
    <div class="stat-card">
      <div class="stat-number" id="total-facilities">0</div>
      <div class="stat-label">Total Facilities</div>
    </div>
    <div class="stat-card">
      <div class="stat-number" id="pending-bookings">0</div>
      <div class="stat-label">Pending Requests</div>
    </div>
    <div class="stat-card">
      <div class="stat-number" id="total-users">0</div>
      <div class="stat-label">Registered Users</div>
    </div>
    <div class="stat-card">
      <div class="stat-number" id="total-bookings">0</div>
      <div class="stat-label">Total Bookings</div>
    </div>
  </div>

  <!-- Pending Approvals Table -->
  <div class="table-container my-5">
    <div class="table-header d-flex justify-content-between align-items-center">
      <h2>Pending Approvals</h2>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>User</th>
            <th>Facility</th>
            <th>Date</th>
            <th>Time</th>
            <th>Purpose</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="admin-bookings-table">
          <!-- Dynamic rows here -->
        </tbody>
      </table>
    </div>
  </div>

  <!-- Facility Management Table -->
  <div class="table-container my-5">
    <div class="table-header d-flex justify-content-between align-items-center">
      <h2>Facility Management</h2>
      <button class="btn btn-primary" onclick="showAddFacilityModal()">+ Add Facility</button>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="admin-facilities-table">
          <!-- Dynamic rows here -->
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
