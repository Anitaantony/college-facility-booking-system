<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Facilities - EduNexus Admin</title>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/dstyle.css" />
  
  <style>
    .manage-facilities-container {
      max-width: 1400px;
      margin: 20px auto;
      padding: 20px;
    }
    
    .page-header {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      text-align: center;
    }
    
    .page-header h1 {
      margin: 0;
      font-size: 2.5rem;
      font-weight: 700;
    }
    
    .page-header p {
      margin: 10px 0 0 0;
      font-size: 1.1rem;
      opacity: 0.9;
    }
    
    .action-buttons {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      gap: 15px;
    }
    
    .btn {
      padding: 12px 20px;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }
    
    .btn-primary {
      background: #667eea;
      color: white;
    }
    
    .btn-primary:hover {
      background: #5a67d8;
      transform: translateY(-2px);
    }
    
    .btn-success {
      background: #00b894;
      color: white;
      font-size: 0.9rem;
      padding: 8px 15px;
    }
    
    .btn-warning {
      background: #fdcb6e;
      color: #333;
      font-size: 0.9rem;
      padding: 8px 15px;
    }
    
    .btn-danger {
      background: #ff6b6b;
      color: white;
      font-size: 0.9rem;
      padding: 8px 15px;
    }
    
    .search-filter {
      display: flex;
      gap: 15px;
      align-items: center;
    }
    
    .search-box {
      position: relative;
    }
    
    .search-box input {
      padding: 10px 15px 10px 40px;
      border: 2px solid #e9ecef;
      border-radius: 8px;
      width: 300px;
      font-size: 1rem;
    }
    
    .search-box i {
      position: absolute;
      left: 12px;
      top: 50%;
      transform: translateY(-50%);
      color: #666;
    }
    
    .filter-select {
      padding: 10px 15px;
      border: 2px solid #e9ecef;
      border-radius: 8px;
      background: white;
      font-size: 1rem;
    }
    
    .facilities-table {
      background: white;
      border-radius: 15px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.08);
      overflow: hidden;
    }
    
    .table {
      width: 100%;
      border-collapse: collapse;
    }
    
    .table th {
      background: #f8f9fa;
      padding: 15px;
      text-align: left;
      font-weight: 600;
      color: #2c3e50;
      border-bottom: 2px solid #e9ecef;
    }
    
    .table td {
      padding: 15px;
      border-bottom: 1px solid #f1f3f4;
      vertical-align: middle;
    }
    
    .table tr:hover {
      background: #f8f9fa;
    }
    
    .status-badge {
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
      text-transform: capitalize;
    }
    
    .status-active {
      background: #d4edda;
      color: #155724;
    }
    
    .status-inactive {
      background: #f8d7da;
      color: #721c24;
    }
    
    .facility-type {
      background: #e3f2fd;
      color: #1976d2;
      padding: 4px 8px;
      border-radius: 12px;
      font-size: 0.8rem;
      font-weight: 600;
    }
    
    .equipment-list {
      max-width: 200px;
      font-size: 0.9rem;
      color: #666;
    }
    
    .actions {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
    }
    
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.5);
    }
    
    .modal-content {
      background-color: white;
      margin: 5% auto;
      padding: 30px;
      border-radius: 15px;
      width: 90%;
      max-width: 600px;
      max-height: 80vh;
      overflow-y: auto;
    }
    
    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    
    .modal-header h2 {
      margin: 0;
      color: #2c3e50;
    }
    
    .close {
      color: #aaa;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }
    
    .close:hover {
      color: #000;
    }
    
    .form-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }
    
    .form-group {
      margin-bottom: 15px;
    }
    
    .form-group label {
      display: block;
      margin-bottom: 5px;
      font-weight: 600;
      color: #2c3e50;
    }
    
    .form-group input,
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 10px;
      border: 2px solid #e9ecef;
      border-radius: 8px;
      font-size: 1rem;
      box-sizing: border-box;
    }
    
    .form-group textarea {
      height: 80px;
      resize: vertical;
    }
    
    .alert {
      padding: 12px 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      font-weight: 500;
    }
    
    .alert-success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }
    
    .alert-error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }
    
    @media (max-width: 768px) {
      .action-buttons {
        flex-direction: column;
        align-items: stretch;
      }
      
      .search-filter {
        flex-direction: column;
        align-items: stretch;
      }
      
      .search-box input {
        width: 100%;
      }
      
      .facilities-table {
        overflow-x: auto;
      }
      
      .actions {
        flex-direction: column;
      }
      
      .modal-content {
        margin: 2% auto;
        width: 95%;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/adminHeader') %>

  <main class="main-content" style="margin-top: 20px;">
    <div class="manage-facilities-container">
      
      <!-- Page Header -->
      <div class="page-header">
        <h1><i class="fas fa-building"></i> Manage Facilities</h1>
        <p>Add, edit, and manage all facility resources</p>
      </div>

      <!-- Success/Error Messages -->
      <% if (success) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle"></i> <%= success %>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div class="alert alert-error">
          <i class="fas fa-exclamation-circle"></i> <%= error %>
        </div>
      <% } %>

      <!-- Action Buttons -->
      <div class="action-buttons">
        <button class="btn btn-primary" onclick="openAddModal()">
          <i class="fas fa-plus"></i> Add New Facility
        </button>
        
        <div class="search-filter">
          <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" placeholder="Search facilities..." onkeyup="filterTable()">
          </div>
          <select class="filter-select" id="typeFilter" onchange="filterTable()">
            <option value="">All Types</option>
            <option value="Auditorium">Auditorium</option>
            <option value="Seminar Hall">Seminar Hall</option>
            <option value="Computer Lab">Computer Lab</option>
            <option value="Physics Lab">Physics Lab</option>
            <option value="Chemistry Lab">Chemistry Lab</option>
            <option value="Conference Room">Conference Room</option>
            <option value="Sports Ground">Sports Ground</option>
            <option value="Library Hall">Library Hall</option>
            <option value="Classroom">Classroom</option>
          </select>
          <select class="filter-select" id="statusFilter" onchange="filterTable()">
            <option value="">All Status</option>
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
            <option value="maintenance">Maintenance</option>
          </select>
        </div>
      </div>

      <!-- Facilities Table -->
      <div class="facilities-table">
        <table class="table" id="facilitiesTable">
          <thead>
            <tr>
              <th>Facility Name</th>
              <th>Type</th>
              <th>Location</th>
              <th>Capacity</th>
              <th>Amenities</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (facilities && facilities.length > 0) { %>
              <% facilities.forEach(function(facility) { %>
                <tr>
                  <td>
                    <strong><%= facility.facility_name %></strong>
                    <% if (facility.description) { %>
                      <br><small style="color: #666;"><%= facility.description.substring(0, 60) %>...</small>
                    <% } %>
                  </td>
                  <td><span class="facility-type"><%= facility.facility_type %></span></td>
                  <td><%= facility.location || 'Not specified' %></td>
                  <td><i class="fas fa-users"></i> <%= facility.capacity %></td>
                  <td>
                    <div class="equipment-list">
                      <% if (facility.amenities && facility.amenities.length > 0) { %>
                        <%= facility.amenities.slice(0, 3).join(', ') %>
                        <% if (facility.amenities.length > 3) { %>
                          <br><small>+<%= facility.amenities.length - 3 %> more</small>
                        <% } %>
                      <% } else { %>
                        <small>No amenities listed</small>
                      <% } %>
                    </div>
                  </td>
                  <td>
                    <span class="status-badge status-<%= facility.status %>">
                      <%= facility.status %>
                    </span>
                  </td>
                  <td>
                    <div class="actions">
                      <button class="btn btn-warning" onclick="editFacilitySimple('<%= facility._id %>')">
                        <i class="fas fa-edit"></i>
                      </button>
                      <form action="/admin/manageFacilities/toggle/<%= facility._id %>" method="POST" style="display: inline;">
                        <button type="submit" class="btn <%= facility.status === 'active' ? 'btn-warning' : 'btn-success' %>">
                          <i class="fas fa-<%= facility.status === 'active' ? 'pause' : 'play' %>"></i>
                        </button>
                      </form>
                      <form action="/admin/manageFacilities/delete/<%= facility._id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this facility?')">
                        <button type="submit" class="btn btn-danger">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="7" style="text-align: center; padding: 40px;">
                  <i class="fas fa-building" style="font-size: 3rem; color: #ccc; margin-bottom: 15px;"></i>
                  <br>No facilities found. <a href="#" onclick="openAddModal()">Add your first facility</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Add/Edit Facility Modal -->
    <div id="facilityModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2 id="modalTitle">Add New Facility</h2>
          <span class="close" onclick="closeModal()">&times;</span>
        </div>
        
        <form id="facilityForm" method="POST">
          <div class="form-grid">
            <div class="form-group">
              <label for="facility_name">Facility Name *</label>
              <input type="text" id="facility_name" name="facility_name" required>
            </div>
            
            <div class="form-group">
              <label for="facility_type">Facility Type *</label>
              <select id="facility_type" name="facility_type" required>
                <option value="">Select Type</option>
                <option value="Auditorium">Auditorium</option>
                <option value="Seminar Hall">Seminar Hall</option>
                <option value="Computer Lab">Computer Lab</option>
                <option value="Physics Lab">Physics Lab</option>
                <option value="Chemistry Lab">Chemistry Lab</option>
                <option value="Conference Room">Conference Room</option>
                <option value="Sports Ground">Sports Ground</option>
                <option value="Library Hall">Library Hall</option>
                <option value="Classroom">Classroom</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="location">Location *</label>
              <input type="text" id="location" name="location" placeholder="e.g., Building A, Floor 2" required>
            </div>
            
            <div class="form-group">
              <label for="capacity">Capacity *</label>
              <input type="number" id="capacity" name="capacity" min="1" required>
            </div>
          </div>
          
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Brief description of the facility..." maxlength="500"></textarea>
          </div>
          
          <div class="form-group">
            <label for="amenities">Amenities (comma-separated)</label>
            <input type="text" id="amenities" name="amenities" placeholder="Projector, AC, Whiteboard, Sound System, etc.">
          </div>
          
          <div class="form-group" id="statusGroup" style="display: none;">
            <label for="status">Status</label>
            <select id="status" name="status">
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
              <option value="maintenance">Maintenance</option>
            </select>
          </div>
          
          <div style="text-align: right; margin-top: 20px;">
            <button type="button" class="btn" onclick="closeModal()" style="background: #6c757d; color: white; margin-right: 10px;">
              Cancel
            </button>
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save"></i> Save Facility
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <script>
    // Open Add Modal
    function openAddModal() {
      document.getElementById('modalTitle').textContent = 'Add New Facility';
      document.getElementById('facilityForm').action = '/admin/manageFacilities/add';
      document.getElementById('statusGroup').style.display = 'none';
      document.getElementById('facilityForm').reset();
      document.getElementById('facilityModal').style.display = 'block';
    }
    
    // Simple edit function that gets data from the table row
    function editFacilitySimple(facilityId) {
      // Find the row with this facility ID
      var rows = document.querySelectorAll('#facilitiesTable tbody tr');
      var facilityRow = null;
      
      for (var i = 0; i < rows.length; i++) {
        var editBtn = rows[i].querySelector('button[onclick*="' + facilityId + '"]');
        if (editBtn) {
          facilityRow = rows[i];
          break;
        }
      }
      
      if (!facilityRow) return;
      
      // Extract data from the row
      var cells = facilityRow.querySelectorAll('td');
      var facilityName = cells[0].querySelector('strong').textContent.trim();
      var facilityType = cells[1].textContent.trim();
      var location = cells[2].textContent.trim();
      var capacity = cells[3].textContent.replace(/\D/g, ''); // Extract numbers only
      var amenities = cells[4].textContent.trim();
      var status = cells[5].textContent.trim().toLowerCase();
      
      // Open edit modal
      document.getElementById('modalTitle').textContent = 'Edit Facility';
      document.getElementById('facilityForm').action = '/admin/manageFacilities/update/' + facilityId;
      document.getElementById('statusGroup').style.display = 'block';
      
      // Fill form
      document.getElementById('facility_name').value = facilityName;
      document.getElementById('facility_type').value = facilityType;
      document.getElementById('location').value = location === 'Not specified' ? '' : location;
      document.getElementById('capacity').value = capacity;
      document.getElementById('description').value = '';
      document.getElementById('amenities').value = amenities === 'No amenities listed' ? '' : amenities;
      document.getElementById('status').value = status;
      
      // Show modal
      document.getElementById('facilityModal').style.display = 'block';
    }
    
    // Close Modal
    function closeModal() {
      document.getElementById('facilityModal').style.display = 'none';
    }
    
    // Close modal when clicking outside
    window.onclick = function(event) {
      if (event.target === document.getElementById('facilityModal')) {
        closeModal();
      }
    }
    
    // Filter Table
    function filterTable() {
      var searchTerm = document.getElementById('searchInput').value.toLowerCase();
      var typeFilter = document.getElementById('typeFilter').value;
      var statusFilter = document.getElementById('statusFilter').value;
      var table = document.getElementById('facilitiesTable');
      var rows = table.getElementsByTagName('tr');
      
      for (var i = 1; i < rows.length; i++) { // Skip header row
        var row = rows[i];
        var cells = row.getElementsByTagName('td');
        
        if (cells.length === 0) continue; // Skip if no cells
        
        var facilityName = cells[0].textContent.toLowerCase();
        var facilityType = cells[1].textContent.trim();
        var location = cells[2].textContent.toLowerCase();
        var status = cells[5].textContent.trim().toLowerCase();
        
        var matchesSearch = facilityName.indexOf(searchTerm) !== -1 || location.indexOf(searchTerm) !== -1;
        var matchesType = !typeFilter || facilityType === typeFilter;
        var matchesStatus = !statusFilter || status === statusFilter;
        
        row.style.display = matchesSearch && matchesType && matchesStatus ? '' : 'none';
      }
    }
  </script>
</body>
</html>
