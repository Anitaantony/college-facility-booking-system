<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login | College Facility Booking System</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    /* Add college background to body */
    .login-body {
      background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), 
                  url('/images/clg.jpg') center/cover no-repeat fixed !important;
      min-height: 100vh;
    }

    /* Enhance login card with glass effect */
    .login-card {
      background: rgba(255, 255, 255, 0.95) !important;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    /* Enhance form controls */
    .form-control {
      background: rgba(248, 249, 250, 0.9) !important;
    }

    .form-control:focus {
      background: white !important;
    }

    /* Enhance alert */
    .alert-danger {
      background: rgba(248, 215, 218, 0.9) !important;
      backdrop-filter: blur(5px);
    }
  </style>
</head>
<body class="login-body">

  <div class="login-container">
    <div class="login-card shadow-lg">
      <h2 class="text-center mb-4">Welcome Back</h2>
      <p class="text-center mb-4">Login to access the Facility Booking System</p>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger text-center">
          <%= error %>
        </div>
      <% } %>

      <form action="/admin/login" method="POST">
        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="form-control" 
            placeholder="Enter your email" 
            required
          >
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            class="form-control" 
            placeholder="Enter your password" 
            required
          >
        </div>

        <!-- Submit Button -->
        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>

      <div class="text-center mt-3">
        <p class="small">Don't have an account? <a href="/auth/signup">Register here</a></p>
      </div>
    </div>
  </div>

</body>
</html>
