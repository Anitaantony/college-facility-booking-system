<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>EduNexus Admin Panel</title>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/dstyle.css" />
  <style>
    /* Admin-specific styles */
    .admin-header {
      background: linear-gradient(135deg, #667eea, #764ba2);
    }
    
    .logo {
      color: #fff;
      font-weight: 700;
      font-size: 1.5rem;
    }
    
    .logo a {
      color: #fff;
      text-decoration: none;
    }
    
    .logo a:hover {
      color: #fff;
      opacity: 0.8;
    }

    /* Make the menu toggle button visible */
    .menu-toggle {
      background: none;
      border: none;
      color: white;
      font-size: 1.5rem;
      cursor: pointer;
      padding: 8px 12px;
      border-radius: 6px;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 15px;
    }

    .menu-toggle:hover {
      background: rgba(255, 255, 255, 0.1);
      color: white;
    }

    .menu-toggle:focus {
      outline: none;
      box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.3);
    }

    /* Ensure header-left has proper display */
    .header-left {
      display: flex;
      align-items: center;
    }

    /* Admin sidebar styling */
    .admin-sidebar {
      background: linear-gradient(180deg, #2c3e50, #34495e);
    }
    
    .admin-sidebar .sidebar-link {
      color: rgba(255,255,255,0.8);
      transition: all 0.3s ease;
    }
    
    .admin-sidebar .sidebar-link:hover {
      background: rgba(255,255,255,0.1);
      color: #fff;
      transform: translateX(5px);
    }
    
    .admin-sidebar .sidebar-link.active {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: #fff;
      border-left: 4px solid #fff;
    }

    /* Profile image rounded */
    #profile-img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #eee;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .user-info span {
      font-weight: 500;
      color: #333;
    }

    .profile-info {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 8px 12px;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s ease;
      color: white;
    }

    .profile-info:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    .profile-img {
      width: 35px;
      height: 35px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.2);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
      font-size: 14px;
      border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .profile-name {
      color: white;
      font-weight: 600;
    }

    .profile-info i {
      color: white;
    }

    /* Fix search container for admin */
    .search-container {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .search-container input {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: white;
      padding: 8px 12px;
      border-radius: 6px;
    }

    .search-container input::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .filter-select {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: white;
      padding: 8px 12px;
      border-radius: 6px;
    }

    .filter-select option {
      background: #667eea;
      color: white;
    }

    /* Notification button */
    .notification-container .icon-button {
      background: none;
      border: none;
      color: white;
      font-size: 1.2rem;
      cursor: pointer;
      padding: 8px;
      border-radius: 6px;
      position: relative;
      transition: all 0.3s ease;
    }

    .notification-container .icon-button:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    .notification-badge {
      position: absolute;
      top: -2px;
      right: -2px;
      background: #ff4757;
      color: white;
      border-radius: 50%;
      width: 18px;
      height: 18px;
      font-size: 10px;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Make sure dropdown menu is properly styled */
    .dropdown-menu {
      position: absolute;
      top: 100%;
      right: 0;
      background: white;
      border-radius: 8px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
      min-width: 180px;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      z-index: 1000;
    }

    .dropdown-menu.show {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .dropdown-item {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 12px 16px;
      color: #333;
      text-decoration: none;
      transition: background 0.3s ease;
    }

    .dropdown-item:hover {
      background: #f8f9fa;
      color: #667eea;
      text-decoration: none;
    }

    .dropdown-item:first-child {
      border-radius: 8px 8px 0 0;
    }

    .dropdown-item:last-child {
      border-radius: 0 0 8px 8px;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="header admin-header">
    <div class="header-left">
      <button class="menu-toggle" id="menu-toggle">
        <i class="fas fa-bars"></i>
      </button>
      <div class="logo">
        <a href="/admin/dashboard">EduNexus Admin</a>
      </div>
    </div>

    <div class="header-right">
      <!-- Search -->
      <div class="search-container">
        <input type="text" placeholder="Search..." id="search-input">
        <select class="filter-select" id="filter-select">
          <option value="all">All</option>
          <option value="bookings">Bookings</option>
          <option value="facilities">Facilities</option>
          <option value="users">Users</option>
        </select>
      </div>

      <!-- Notifications -->
      <div class="notification-container">
        <button class="icon-button" id="notification-btn">
          <i class="fas fa-bell"></i>
          <span class="notification-badge">5</span>
        </button>
      </div>

      <!-- Profile Dropdown -->
      <div class="profile-container">
        <div class="profile-info" id="profile-btn">
          <div class="profile-img" id="profileInitials">
            AD
          </div>
          <span class="profile-name">Admin</span>
          <i class="fas fa-chevron-down"></i>
        </div>
        <div class="dropdown-menu" id="dropdown-menu">
          <a href="/admin/profile" class="dropdown-item">
            <i class="fas fa-user-circle"></i>
            <span>Profile</span>
          </a>
          <a href="/admin/settings" class="dropdown-item">
            <i class="fas fa-cog"></i>
            <span>Settings</span>
          </a>
          <a href="/auth/logout" class="dropdown-item">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Admin Sidebar -->
  <aside class="sidebar admin-sidebar" id="sidebar">
    <ul class="sidebar-menu">
      <!-- Dashboard -->
      <li class="sidebar-item">
        <a href="/admin/dashboard" class="sidebar-link active">
          <i class="fas fa-tachometer-alt"></i>
          <span>Dashboard</span>
        </a>
      </li>

      <!-- Bookings Management -->
      <li class="sidebar-item">
        <a href="/admin/manageBookings" class="sidebar-link">
          <i class="fas fa-calendar-check"></i>
          <span>Manage Bookings</span>
        </a>
      </li>

      <!-- Facilities Management -->
      <li class="sidebar-item">
        <a href="/admin/manageFacilities" class="sidebar-link">
          <i class="fas fa-building"></i>
          <span>Manage Facilities</span>
        </a>
      </li>

      <!-- User Management -->
      <li class="sidebar-item">
        <a href="/admin/manageUsers" class="sidebar-link">
          <i class="fas fa-users-cog"></i>
          <span>Manage Users</span>
        </a>
      </li>

      <!-- Classroom Allotments -->
      <!-- <li class="sidebar-item">
        <a href="/admin/classroomAllotment" class="sidebar-link">
          <i class="fas fa-chalkboard"></i>
          <span>Classroom Allotments</span>
        </a>
      </li> -->

      <!-- Complaints -->
      <li class="sidebar-item">
        <a href="/admin/viewComplaints" class="sidebar-link">
          <i class="fas fa-exclamation-circle"></i>
          <span>View Complaints</span>
        </a>
      </li>

      <!-- Reports & Analytics -->
      <li class="sidebar-item">
        <a href="/admin/reports" class="sidebar-link">
          <i class="fas fa-chart-bar"></i>
          <span>Reports</span>
        </a>
      </li>

      <!-- System Settings -->
      <!-- <li class="sidebar-item">
        <a href="/admin/settings" class="sidebar-link">
          <i class="fas fa-cog"></i>
          <span>System Settings</span>
        </a>
      </li> -->

      <!-- Help & Support -->
      <!-- <li class="sidebar-item">
        <a href="/admin/help" class="sidebar-link">
          <i class="fas fa-question-circle"></i>
          <span>Help & Support</span>
        </a>
      </li> -->
    </ul>
  </aside>

  <!-- Overlay for mobile -->
  <div class="overlay" id="overlay"></div>

  <!-- Main Content Placeholder -->
  <main id="main-content">
    <!-- Your dynamic admin content goes here -->
  </main>

  <!-- Scripts -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const menuToggle = document.getElementById('menu-toggle');
      const sidebar = document.getElementById('sidebar');
      const mainContent = document.getElementById('main-content');
      const overlay = document.getElementById('overlay');
      const profileBtn = document.getElementById('profile-btn');
      const dropdownMenu = document.getElementById('dropdown-menu');

      // Toggle sidebar
      menuToggle.addEventListener('click', () => {
        sidebar.classList.toggle('open');
        mainContent.classList.toggle('sidebar-open');
        overlay.classList.toggle('active');
      });

      // Close sidebar when clicking on overlay
      overlay.addEventListener('click', () => {
        sidebar.classList.remove('open');
        mainContent.classList.remove('sidebar-open');
        overlay.classList.remove('active');
      });

      // Toggle profile dropdown
      profileBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        dropdownMenu.classList.toggle('show');
      });

      // Close dropdown when clicking elsewhere
      document.addEventListener('click', (e) => {
        if (dropdownMenu.classList.contains('show') &&
            !dropdownMenu.contains(e.target) &&
            !profileBtn.contains(e.target)) {
          dropdownMenu.classList.remove('show');
        }
      });

      // Prevent dropdown from closing when clicking inside it
      dropdownMenu.addEventListener('click', (e) => e.stopPropagation());

      // Highlight active sidebar link
      const currentPath = window.location.pathname;
      const sidebarLinks = document.querySelectorAll('.sidebar-link');
      
      sidebarLinks.forEach(link => {
        link.classList.remove('active');
        if (link.getAttribute('href') === currentPath) {
          link.classList.add('active');
        }
      });
    });
  </script>
</body>
</html>
